@using WebTatilSitesi.Models.Classes
@model List<BlogSinifi>

@foreach (var x in Model)
{
    @if (Model.Count == 0)
    {
        <h1>bir şey yok</h1>
    }
    else
    {


        <div class="right">
            <div class="bot-left">
                <img src="@x.BlogGorsel" style="width:300px; height:150px;" alt="" />
            </div>
            <div class="left-text">

                <h4>@x.AnaBaslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                <p>@x.Aciklama.Substring(0,80)</p>
                <p><a href="/Blog/BlogDetayi/@x.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
}

