@using WebTatilSitesi.Models.Classes
@model List<BlogSinifi>
@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Blog Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AnaBaslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-info">Detaylar</a></td>
        </tr>
    }

</table>
<a href="/Admin/YeniBlogEkle/" class="btn btn-primary">Yeni Blog Ekle</a>

