@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title> Register </title>
    <link rel="stylesheet" href="~/register/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <div class="title">Kayıt Ol</div>
        <div class="content">
            <form action="#">
                <div class="user-details">
                    <div class="input-box">
                        <span class="details">Ad </span>
                        <input type="text" placeholder="Adınızı Girin" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Soyad</span>
                        <input type="text" placeholder="Soyadınızı Girin" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Email</span>
                        <input type="text" placeholder="Email Girin" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Şifre</span>
                        <input type="text" placeholder="Şifrenizi Girin" required>
                    </div>
                    <div class="input-box">
                        <span class="details">Şifre Tekrarı</span>
                        <input type="text" placeholder="Şifrenizi tekrar Girin" required>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Kayıt Ol">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
