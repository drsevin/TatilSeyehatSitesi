@using WebTatilSitesi.Models
@model Kayit


@{
    
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <title> Register </title>
    <link rel="stylesheet" href="~/register/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container">
        <div class="title">Kayıt Ol</div>
        <div class="content">
            <form asp-action="Index" method="post" asp-controller="Admin">
                <div class="user-details">
                    <div class="input-box">
                        <span asp-validation-for="Ad" class="details">Ad </span>
                        <input asp-for="Ad" type="text" placeholder="Adınızı Girin" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="Soyad" class="details">Soyad</span>
                        <input asp-for="Soyad" type="text" placeholder="Soyadınızı Girin" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="Mail" class="details">Email</span>
                        <input asp-for="Mail" type="email" placeholder="Email Girin" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="Sifre" class="details">Şifre</span>
                        <input asp-for="Sifre" type="password" placeholder="Şifrenizi Girin" required>
                    </div>
                    <div class="input-box">
                        <span asp-validation-for="SifreTekrar" class="details">Şifre Tekrarı</span>
                        <input asp-for="SifreTekrar" type="password" placeholder="Şifrenizi tekrar Girin" required>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Kayıt Ol">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
