@using WebTatilSitesi.Models.Classes
@model List<YorumSinifi>
@{
    ViewData["Title"] = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yorum Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            @if (x.Blog.AnaBaslik.Count() != 0)
            {
                <td>@x.Blog.AnaBaslik</td>

            }
            else
            {

                <td>AnaBaslik</td>
            }

            <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@x.ID/" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>